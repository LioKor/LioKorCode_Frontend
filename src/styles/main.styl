@require 'constants.styl'

*
    box-sizing border-box

body
    font-family Arial
    margin 0
    overflow-x hidden
    overflow-y scroll
    min-height 100vh

    background global-background;
    transition background-color ease 0.3s
#app
    //display flex
    //flex-direction column
    min-height 100vh

h2, h3, h4
    margin 15px 0

.mobile-show
    display none !important
@media screen and (max-width: 700px) {
    .mobile-hide {
        display: none !important;
    }
    .mobile-show {
        display: inline-block !important;
    }
}

button
    border 1px solid #BBB;
    border-radius 5px;
    padding 4px;
    background-color #FAFAFA;

    transition 0.3s ease all;

button:hover
    border-color color4
    box-shadow 0 0 2px color4

a
    text-decoration underline
    color textColor2
    transition all 0.3s ease
    cursor pointer
a:hover
    color clHighlight


.withHint
    position relative
    pointer-events all
.withHint:after
    content attr(data-hint)
    opacity 0
    transition all 0.2s ease
    padding 8px
    margin 0
    position absolute
    top 0
    left 100%
    height 100%
    box-sizing border-box
    background colorShadowSolid
    box-shadow 5px 0 5px colorShadow
    display flex
    align-items center
    justify-content center
    white-space nowrap
.withHint:hover:after
    opacity 1
