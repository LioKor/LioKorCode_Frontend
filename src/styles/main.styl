@require 'constants.styl'

*
    box-sizing border-box

body
    font-family Arial
    margin 0
    overflow-x hidden
    overflow-y scroll
    min-height 100vh

    background global-background;
    transition background-color ease 0.3s

#app
    display flex
    > .slide-line
        height 100vh

h2, h3, h4
    margin 15px 0

.mobile-show
    display none !important
@media screen and (max-width: 700px) {
    .mobile-hide {
        display: none !important;
    }
    .mobile-show {
        display: inline-block !important;
    }
}

button
    border 1px solid #BBB;
    border-radius 5px;
    padding 4px;
    background-color #FAFAFA;

    transition 0.3s ease all;

button:hover
    border-color color4
    box-shadow 0 0 2px color4

a
    text-decoration underline
    color textColor2
    transition all 0.3s ease
    cursor pointer
a:hover
    color clHighlight
