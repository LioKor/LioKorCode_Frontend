@require 'constants.styl'
@require 'scrollbars.styl'

*
    box-sizing border-box
body
    font-family Arial
    margin 0
    overflow-y hidden
    max-height 100vh

    background rgba(0, 0, 0, 0) linear-gradient(30deg, rgb(21, 49, 49) 0%, rgb(46, 20, 60) 60%, rgb(93, 78, 37) 100%) repeat scroll 0% 0%;
    transition background-color ease 0.3s

h2, h3, h4
    margin 15px 0

.mobile-show
    display none
@media screen and (max-width: $mobileWidth) {
    .mobile-hide {
        display: none;
    }
    .mobile-show {
        display: block;
    }
}

button
    border 1px solid #BBB;
    border-radius 5px;
    padding 4px;
    background-color #FAFAFA;

    transition 0.3s ease all;

button:hover
    border-color orange
    box-shadow 0 0 2px orange

#app
    display flex
    flex-direction column
    height 100vh
